<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pe.com.skyblanc.market.NewItemActivity">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number">
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="S/.100"
            android:id="@+id/amountTextInputEditText"
            android:textSize="40sp" />
    </android.support.design.widget.TextInputLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/deleteicon"
        android:layout_marginEnd="48dp"
        android:layout_marginTop="92dp"
        android:id="@+id/deleteimageButton"
        android:layout_alignParentEnd="true"
        android:background="@android:drawable/screen_background_light_transparent" />

    <ImageButton
        android:layout_width="77dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/checkedicon"
        android:id="@+id/checkimageButton"
        android:background="@android:drawable/screen_background_light_transparent"
        android:layout_marginEnd="15dp"
        android:layout_alignTop="@+id/deleteimageButton"
        android:layout_toStartOf="@+id/deleteimageButton"
        android:layout_alignBottom="@+id/deleteimageButton" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tableLayout"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/deleteimageButton"
        android:layout_alignParentStart="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold"
                android:text="  Producto"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold"
                android:text="Cantidad"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold"
                android:text="Descuento"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold"
                android:text="Foto"/>

        </TableRow>


    </TableLayout>

</RelativeLayout>